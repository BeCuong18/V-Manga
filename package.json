
{
  "name": "v-manga",
  "version": "1.0.4",
  "description": "Ứng dụng tự động hóa quy trình sản xuất truyện tranh và hình ảnh minh họa bằng AI.",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "npx tsc && vite build",
    "preview": "vite preview",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder --publish always",
    "make-icon": "npx png2icons assets/icon.png assets/icon -i"
  },
  "author": "V-Manga Team",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/BeCuong18/V-Manga"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "crypto-js": "^4.2.0",
    "xlsx": "^0.18.5",
    "electron-updater": "^6.1.8",
    "electron-log": "^5.1.5"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "png2icons": "^2.0.1"
  },
  "build": {
    "appId": "com.vmanga.app",
    "productName": "V-Manga",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "BeCuong18",
        "repo": "V-Manga",
        "releaseType": "release"
      }
    ],
    "files": [
      "dist/**/*",
      "main.js",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/ffmpeg",
        "to": "ffmpeg"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "shortcutName": "V-Manga"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  }
}
